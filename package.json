{
  "name": "react-channel-plugin",
  "version": "2.1.3",
  "description": "Channel IO plugin wrapper for React",
  "author": "Uk-Jin Jang <doublestat@gmail.com>",
  "repository": "https://github.com/ukjinjang/react-channel-plugin",
  "homepage": "https://ukjinjang.github.io/react-channel-plugin",
  "license": "MIT",
  "keywords": [
    "react",
    "react-hooks",
    "react-channel",
    "react-channel-plugin",
    "channalio",
    "channal talk",
    "live chat",
    "customer-service"
  ],
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "run-s playground:start",
    "build": "tsc -p ./tsconfig.build.json && tsc -p ./tsconfig.build.es.json",
    "postbuild": "downlevel-dts ./es/ChannelIO.d.ts ./es/ChannelIO.d.ts --to=3.8",
    "playground:start": "snowpack dev --config ./snowpack.config.ts",
    "playground:build": "cross-env BABEL_ENV=production DEPLOY=true snowpack build --config ./snowpack.config.ts && del \"build/_*\" && touch build/.nojekyll",
    "playground:build-e2e": "cross-env BABEL_ENV=e2e snowpack build --config ./snowpack.config.ts",
    "e2e": "run-s playground:build-e2e && start-test serve 8090 'cypress open'",
    "e2e:cli": "run-s playground:build-e2e && start-test serve 8090 'cypress run'",
    "e2e:build-and-serve": "run-s playground:build-e2e serve",
    "lint": "eslint --ext .ts --ext .tsx ./src",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "deploy:playground": "gh-pages -t -m \"update gh-pages [ci skip]\" -d build",
    "serve": "serve -l 8090 -s ./build"
  },
  "peerDependencies": {
    "fast-deep-equal": ">=3.0.0",
    "react": ">=16.8.0",
    "tslib": ">=2.2.0"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3",
    "react": "^16.8.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@cypress/code-coverage": "^3.9.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@snowpack/plugin-babel": "^2.1.7",
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^2.3.1",
    "@types/node": "^12.12.62",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.1.9",
    "@types/webpack": "^4.41.6",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-styled-components": "^1.12.0",
    "cross-env": "^7.0.3",
    "cypress": "^7.2.0",
    "del-cli": "^3.0.1",
    "downlevel-dts": "^0.7.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-jsdoc": "^33.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react-app": "^6.2.2",
    "gh-pages": "^3.1.0",
    "husky": "^4.2.3",
    "istanbul-lib-coverage": "^3.0.0",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "react-dom": "^16.13.0",
    "react-github-btn": "^1.2.0",
    "serve": "^11.3.2",
    "snowpack": "^3.3.7",
    "snowpack-plugin-replace": "^1.0.4",
    "start-server-and-test": "^1.12.1",
    "styled-components": "^5.3.0",
    "touch": "^3.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
